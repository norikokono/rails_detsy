<div class="card-block special-card p-3 mb-5 rounded" style="background-color: rgba(245, 245, 245, 0.4);">
	<h1 class="link animated bounce delay-2s">Contact Us</h1>
	<%= form_with url: '/thank_you', local: true do |f| %>
		<div class='form-group'>
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		<div class='form-group'>
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>
		</div>
		<div class='form-group'>
			<%= f.label :question %>
			<%= f.text_area :question, class: 'form-control' %>
		</div>
		<%= f.submit 'Send', class: 'btn btn-secondary btn-block' %>
	<% end %>
</div>